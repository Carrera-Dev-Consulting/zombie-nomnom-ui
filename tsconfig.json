{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "typedocOptions": {
    "entryPointStrategy": "expand",
    "exclude": "**/*.stories.{js,jsx,ts,tsx}",
    "entryPoints": ["src/app"], // Specify the entry points for your documentation
    "out": "docs", // Output directory for the generated documentation
    "name": "Zombie Nom Nom UI Docs" // Name of your documentation site
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "tests"]
}
